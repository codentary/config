" Enable line numbers
set number

" Enable search highlighting
set hlsearch

" Turn on color syntax highlighting
syntax on

" Make backspace work like most other apps
set backspace=2

" Add full file path to your existing status-line
set statusline+=%F

" Make status-line visible
set laststatus=2

" Insert 4 spaces instead of tab
set tabstop=4
set expandtab

" Indentation insert 4 spaces
set shiftwidth=4

" Encoding
set encoding=utf-8      " The encoding displayed
set fileencoding=utf-8  " The encoding written to file

" Ignore case (for search)
set ic

" Enable spelling
"set spell

" Prevent custom `.vimrc` files from being loaded
set secure
